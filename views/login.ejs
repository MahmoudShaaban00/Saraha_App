<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | Sarahah</title>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      min-height: 100vh;
    }

    .login-card {
      border-radius: 15px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      margin-bottom: 40px;
      margin: 80px auto 0 auto;
    }

    .login-title {
      color: #0dcaf0;
    }
  </style>
</head>

<body>

  <!-- Full Navbar -->
  <%- include('shared/header') %>

  <!-- Login Form -->
  <div class="card login-card p-4" style="width: 100%; max-width: 400px;">
    <h3 class="text-center mb-4 login-title">Login to Sarahah</h3>

    <% if (error) { %>
  <div class="alert alert-danger">
    <%= error %>
  </div>
<% } %>

    <form action="/handleLogin" method="POST">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" name="password" class="form-control" required>
      </div>

      <button class="btn btn-info w-100 fw-bold text-white">Login</button>
    </form>

    <p class="text-center mt-3 mb-0">
      Donâ€™t have an account?
      <a href="/register" class="text-info fw-semibold">Register</a>
    </p>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
