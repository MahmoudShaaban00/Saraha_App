        <% } %>
          <% if (session?.isLoggedIn) { %>
             <li class="nav-item"><a class="nav-link text-white" href="/"><%= session.name %></a></li>
        <li class="nav-item"><a class="nav-link text-white" href="/logout">Logout</a></li>
        <% } %>

        
      </ul>
    </div>
  </div>
